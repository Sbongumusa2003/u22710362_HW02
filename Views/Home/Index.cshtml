@model u22710362_HW2.Models.PetRecordsVM
@{
    ViewBag.Title = "RescuePet - Find Your Perfect Companion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-section text-center py-5 mb-5" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; border-radius: 15px;">
    <div class="container">
        <h1 class="display-4 mb-3">🐾 Welcome to RescuePet</h1>
        <p class="lead mb-4">Where every pet finds their perfect home and every heart finds its companion</p>
        @Html.ActionLink("VIEW PETS", "Pets", "Home", null, new { @class = "btn btn-light btn-lg px-5 py-3", @style = "border-radius: 50px; font-weight: bold; text-decoration: none;" })
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Adoption Statistics Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0" style="border-radius: 15px; background: linear-gradient(45deg, #43a047, #66bb6a);">
                <div class="card-body text-center text-white">
                    <i class="fas fa-heart fa-3x mb-3"></i>
                    <h3 class="card-title">Total Successful Adoptions</h3>
                    <h1 class="display-3 font-weight-bold">@Model.TotalAdoptions</h1>
                    <p class="card-text">Pets have found their forever homes through our platform!</p>
                </div>
            </div>
        </div>

        <!-- Recent Adoptions Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-header bg-primary text-white text-center" style="border-radius: 15px 15px 0 0;">
                    <h4 class="mb-0"><i class="fas fa-trophy"></i> Recent Success Stories</h4>
                </div>
                <div class="card-body">
                    @if (Model.Pets != null && Model.Pets.Any())
                    {
                        <div style="max-height: 300px; overflow-y: auto;">
                            @foreach (var pet in Model.Pets.Take(10))
                            {
                                <div class="d-flex align-items-center mb-3 p-2" style="background: #f8f9fa; border-radius: 10px;">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-paw text-success fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6 class="mb-1 text-primary">@pet.Name</h6>
                                        <small class="text-muted">
                                            Adopted by <strong>@pet.AdoptedByFirstName @pet.AdoptedByLastName</strong>
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-heart-broken fa-3x text-muted mb-3"></i>
                            <p class="text-muted">No adoptions yet, but every journey starts with a first step!</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Call to Action Section -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm" style="border-radius: 15px; background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 50%, #fecfef 100%);">
                <div class="card-body text-center py-5">
                    <h2 class="mb-4">Ready to Make a Difference?</h2>
                    <p class="lead mb-4">Whether you're looking to adopt, help a pet find a home, or support our cause, we're here to help!</p>
                    <div class="row justify-content-center">
                        <div class="col-md-4 mb-3">
                            @Html.ActionLink("🔍 Browse Pets", "Pets", "Home", null, new { @class = "btn btn-primary btn-lg w-100", @style = "border-radius: 50px;" })
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.ActionLink("📝 Post a Pet", "PostPet", "Home", null, new { @class = "btn btn-success btn-lg w-100", @style = "border-radius: 50px;" })
                        </div>
                        <div class="col-md-4 mb-3">
                            @Html.ActionLink("💝 Donate", "Donate", "Home", null, new { @class = "btn btn-warning btn-lg w-100", @style = "border-radius: 50px;" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}