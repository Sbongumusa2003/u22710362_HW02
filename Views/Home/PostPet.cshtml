                        </div>

                        <!-- Pet Details Section -->
                        <div class="section-header mb-4 mt-5">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-paw"></i> Pet Details
                            </h5>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">
                                    Pet Name <span class="text-danger">*</span>
                                </label>
                                <input