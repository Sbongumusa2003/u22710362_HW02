@model u22710362_HW2.Models.PetRecordsVM
@{
    ViewBag.Title = "Post a Pet for Adoption";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <div class="text-center py-4" style="background: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%); color: white; border-radius: 15px;">
                <h1 class="display-4">📝 Post a Pet for Adoption</h1>
                <p class="lead">Help a pet find their perfect forever home</p>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0" style="border-radius: 15px;">
                <div class="card-header bg-primary text-white" style="border-radius: 15px 15px 0 0;">
                    <h4 class="mb-0 text-center"><i class="fas fa-plus-circle"></i> Pet Information Form</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("CreatePet", "Home", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", enctype = "multipart/form-data" }))
                    {
                        <!-- Your Details Section -->
                        <div class="section-header mb-4">
                            <h5 class="text-primary border-bottom pb-2">
                                <i class="fas fa-user"></i> Your Details
                            </h5>
                        </div>

                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label for="postedByUserId" class="form-label">
                                    Your Full Name <span class="text-danger">*</span>
                                </label>
                                <select name="postedByUserId" id="postedByUserId" class="form-select" required onchange="updateUserPhone()">
                                    <option value="">Select your name...</option>
                                    @if (Model.Users != null)
                                    {
                                        foreach (var user in Model.Users)
                                        {
                                            <option value="@user.ID" data-phone="@user.PhoneNumber">@user.FullName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">Please select your name.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="userPhoneNumber" class="form-label">Phone Number</label>
                                <input type="text" name="name" id="name" class="form-control" required placeholder="Enter pet's name">
                                <div class="invalid-feedback">Please provide a pet name.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="petTypeId" class="form-label">
                                    Pet Type <span class="text-danger">*</span>
                                </label>
                                <select name="petTypeId" id="petTypeId" class="form-select" required onchange="filterPetBreeds()">
                                    <option value="">Select pet type...</option>
                                    @if (Model.PetTypes != null)
                                    {
                                        foreach (var type in Model.PetTypes)
                                        {
                                            <option value="@type.ID">@type.TypeName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">Please select a pet type.</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="breedId" class="form-label">
                                    Breed <span class="text-danger">*</span>
                                </label>
                                <select name="breedId" id="breedId" class="form-select" required>
                                    <option value="">Select breed...</option>
                                    @if (Model.PetBreeds != null)
                                    {
                                        foreach (var breed in Model.PetBreeds)
                                        {
                                            <option value="@breed.ID" data-pettype="@breed.PetTypeID" style="display: none;">@breed.BreedName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">Please select a breed.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="locationId" class="form-label">
                                    Location <span class="text-danger">*</span>
                                </label>
                                <select name="locationId" id="locationId" class="form-select" required>
                                    <option value="">Select location...</option>
                                    @if (Model.Locations != null)
                                    {
                                        foreach (var location in Model.Locations)
                                        {
                                            <option value="@location.ID">@location.LocationName</option>
                                        }
                                    }
                                </select>
                                <div class="invalid-feedback">Please select a location.</div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label for="age" class="form-label">
                                    Age (years) <span class="text-danger">*</span>
                                </label>
                                <input type="number" name="age" id="age" class="form-control" required min="0" max="30" placeholder="0">
                                <div class="invalid-feedback">Please enter a valid age (0-30 years).</div>
                            </div>
                            <div class="col-md-4">
                                <label for="weight" class="form-label">
                                    Weight (kg) <span class="text-danger">*</span>
                                </label>
                                <input type="number" name="weight" id="weight" class="form-control" required min="0.1" max="200" step="0.1" placeholder="0.0">
                                <div class="invalid-feedback">Please enter a valid weight.</div>
                            </div>
                            <div class="col-md-4">
                                <label for="gender" class="form-label">
                                    Gender <span class="text-danger">*</span>
                                </label>
                                <select name="gender" id="gender" class="form-select" required>
                                    <option value="">Select gender...</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <div class="invalid-feedback">Please select a gender.</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="petStory" class="form-label">
                                Pet Story <span class="text-danger">*</span>
                            </label>
                            <textarea name="petStory" id="petStory" class="form-control" rows="4" required placeholder="Tell us about this pet's personality, habits, and why they're looking for a new home..."></textarea>
                            <div class="invalid-feedback">Please provide a pet story.</div>
                            <small class="form-text text-muted">Share what makes this pet special and help potential adopters connect with them.</small>
                        </div>

                        <div class="mb-4">
                            <label for="petImage" class="form-label">
                                Pet Photo <span class="text-danger">*</span>
                            </label>
                            <input type="file" id="petImage" class="form-control" accept="image/*" required onchange="previewImage(this)">
                            <input type="hidden" name="b64Image" id="b64Image">
                            <div class="invalid-feedback">Please select a photo of the pet.</div>
                            <small class="form-text text-muted">Upload a clear, recent photo of the pet (JPG, PNG, GIF).</small>
                            
                            <!-- Image Preview -->
                            <div id="imagePreview" class="mt-3" style="display: none;">
                                <div class="text-center">
                                    <img id="previewImg" src="#" alt="Pet Preview" class="img-thumbnail" style="max-width: 300px; max-height: 300px; border-radius: 10px;">
                                    <p class="mt-2 text-muted">Preview of uploaded image</p>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Section -->
                        <div class="text-center mt-5">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h5 class="card-title text-success">Ready to Post?</h5>
                                    <p class="card-text">By posting, you're helping this pet find a loving forever home. Thank you for caring!</p>
                                    <button type="submit" class="btn btn-success btn-lg px-5 py-3 me-3" style="border-radius: 50px; font-weight: bold;">
                                        <i class="fas fa-paper-plane"></i> Post Pet
                                    </button>
                                    @Html.ActionLink("Cancel", "Pets", "Home", null, new { @class = "btn btn-outline-secondary btn-lg px-4 py-3", @style = "border-radius: 50px;" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        function updateUserPhone() {
            var userSelect = document.getElementById('postedByUserId');
            var phoneInput = document.getElementById('userPhoneNumber');
            var selectedOption = userSelect.options[userSelect.selectedIndex];
            
            if (selectedOption.value) {
                phoneInput.value = selectedOption.getAttribute('data-phone');
            } else {
                phoneInput.value = '';
            }
        }

        function filterPetBreeds() {
            var selectedTypeId = document.getElementById('petTypeId').value;
            var breedSelect = document.getElementById('breedId');
            var options = breedSelect.options;

            // Reset breed selection
            breedSelect.value = '';

            // Show/hide breeds based on selected pet type
            for (var i = 1; i < options.length; i++) {
                var option = options[i];
                var breedPetTypeId = option.getAttribute('data-pettype');
                
                if (selectedTypeId === '' || breedPetTypeId === selectedTypeId) {
                    option.style.display = 'block';
                } else {
                    option.style.display = 'none';
                }
            }
        }

        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                
                reader.onload = function(e) {
                    var preview = document.getElementById('previewImg');
                    var previewDiv = document.getElementById('imagePreview');
                    var b64Input = document.getElementById('b64Image');
                    
                    preview.src = e.target.result;
                    previewDiv.style.display = 'block';
                    
                    // Convert to base64 without data URL prefix
                    var base64String = e.target.result.split(',')[1];
                    b64Input.value = base64String;
                }
                
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Bootstrap form validation
        (function() {
            'use strict';
            window.addEventListener('load', function() {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function(form) {
                    form.addEventListener('submit', function(event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>

    <style>
        .section-header h5 {
            font-weight: 600;
        }
        
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        
        .card {
            transition: box-shadow 0.3s ease;
        }
        
        .card:hover {
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }
        
        .btn {
            transition: all 0.3s ease;
        }
        
        .btn:hover {
            transform: translateY(-2px);
        }
    </style>
